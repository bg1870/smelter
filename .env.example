# Smelter Environment Configuration
# Copy this file to .env and adjust values as needed

# API Configuration
SMELTER_API_PORT=8081

# WGPU Configuration
# Note: TEXTURE_BINDING_ARRAY and PUSH_CONSTANTS are hardcoded requirements
# This variable only adds ADDITIONAL features beyond the required ones
SMELTER_REQUIRED_WGPU_FEATURES=SAMPLED_TEXTURE_AND_STORAGE_BUFFER_ARRAY_NON_UNIFORM_INDEXING

# GPU Selection (Optional)
# Force GPU usage (will abort if only CPU adapter available)
SMELTER_FORCE_GPU=true

# Select specific GPU by device ID
# SMELTER_GPU_DEVICE_ID=0

# Select GPU by driver name (e.g., nvidia, amdgpu, intel)
# SMELTER_GPU_DEVICE_DRIVER=nvidia

# Web Renderer Configuration
# Enable/disable the Chromium-based web renderer (if built with web-renderer feature)
SMELTER_WEB_RENDERER_ENABLE=true
SMELTER_WEB_RENDERER_GPU_ENABLE=true

# Rendering Mode
# Force CPU-optimized rendering mode (still requires GPU for WGPU features)
# SMELTER_FORCE_CPU_OPTIMIZED_RENDERING_MODE=false

# Logging Configuration
SMELTER_LOGGER_LEVEL=info,wgpu_hal=warn,wgpu_core=warn
SMELTER_LOGGER_FORMAT=json

# Optional: Offline processing mode
# SMELTER_OFFLINE_PROCESSING_MODE=false
